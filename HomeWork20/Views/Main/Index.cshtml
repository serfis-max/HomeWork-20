@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HW_201.Data.User
@using HW_201.Data

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Phone numbers</title>
  <link href="~/css/StylesList.css" rel="stylesheet" />
  <handlers>
    <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
    <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
  </handlers>
</head>

<body class="BodyBackground">
  <div>
    <h1>
      <span>
        Phone book
      </span>
    </h1>
  </div>

  <div>
    <form asp-controller="Main" asp-action="AddNewUser" method="post">
      <table class="TableMain">
        <tr>
          <td>
            <label>Surname</label><br />
            <input asp-for="Surname" value="" required />
          </td>
          <td>
            <label>FirstName</label><br />
            <input asp-for="FirstName" value="" required />
          </td>
          <td>
            <label>Patronymic</label><br />
            <input asp-for="Patronymic" value="" />
          </td>
          <td>
            <label>Phone number</label><br />
            <input asp-for="PhoneNumber" value="" />
          </td>
          <td>
            <label>Adress</label><br />
            <input asp-for="Adress" value="" />
          </td>
          <td>
            <br />
            <input type="submit" value="Добавить" />
          </td>
        </tr>
      </table>
    </form>
  </div>

  <table class="TableMain">
    @foreach (User item in ViewBag.Table)
    {
      <tr>
        <td align="center">
          <a href="@Url.Action("UsersInfo", new { id = item.Id })" class="btn btn-primary btn-lg">@item.Id</a>
          <input asp-for="Id" type="hidden" form="upd_@item.Id" value="@item.Id" />
        </td>
        <td><input asp-for="Surname" type="text" form="upd_@item.Id" value="@item.Surname" /></td>
        <td><input asp-for="FirstName" type="text" form="upd_@item.Id" value="@item.FirstName" /></td>
        <td><input asp-for="Patronymic" type="text" form="upd_@item.Id" value="@item.Patronymic" /></td>
        <td><input asp-for="PhoneNumber" type="text" form="upd_@item.Id" value="@item.PhoneNumber" /></td>
        <td><input asp-for="Adress" type="text" form="upd_@item.Id" value="@item.Adress" /></td>
        
        <td>
          <form asp-controller="Main" asp-action="UpdateUser" method="put" id="upd_@item.Id" asp-antiforgery="false">
            <input type="submit" value="Изменить" />
          </form>
        </td>

        <td>
          <form asp-controller="Main" asp-action="DeleteMethod" method="delete" asp-antiforgery="false">
            <input asp-for="Id" type="hidden" value="@item.Id" />
            <input type="submit" value="Удалить" />
          </form>
        </td>
      </tr>
    }
  </table>

</body>
</html>